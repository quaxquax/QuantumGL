# Emscripten Compiler
CXX = emcc



# Compilation Flags
COPTS = -I. -g -frtti -fpermissive

EMSCRIPTEN_OPTS = \
    -I/usr/local/include \
    -s WASM=1 \
    -s USE_WEBGL2=1 \
    -s FULL_ES3=1 \
    -s ALLOW_MEMORY_GROWTH=1 \
    -s STACK_SIZE=100MB \
    -s TOTAL_MEMORY=512MB \
    -s FORCE_FILESYSTEM \
    -s EXPORTED_RUNTIME_METHODS='["ccall", "cwrap"]' \
    -ferror-limit=0 -std=c++11  -stdlib=libc++ 

SRCS=\
	AbsEvaluator.cp\
	Animator.cp\
	AutoreleasePool.cp\
	BSPTree.cp\
	CalculationStage.cp\
	CommonEvaluator.cp\
	CubeEdges.cp\
	CubeInfo.cp\
	CutToEvaluator.cp\
	DefinedField.cp\
	ExplicitPointList.cp\
	ExpressionEvaluator.cp\
	Expressions.cp\
	Flow.cp\
	FieldExpressions.cp\
	FieldFunction.cp\
	FieldFunctions/CoulombFunctions.cp\
	FieldFunctions/FieldFunctionRegistry.cp\
	FieldFunctions/Hydrogen553.cp\
	FieldFunctions/StdFieldFunctions.cp\
	GridPointList.cp\
	ImageExporter.stub.cp\
	IsoSurface.cp\
	lex.yy.cp\
	quantum.tab.cp\
	QuantumDescription.cp\
	ReadEvaluator.cp\
	RealVariable.cp\
	ReferenceCounted.cp\
	ScaleToEvaluator.cp\
	Slice.cp\
	StandardFunctions.cp\
	ValueEvaluator.cp\
	ValueExpressions.cp\
	Vectors.cp\
	VisualObject.cp\
	ZoomEvaluator.cp\
	QuantumGL.cp\
	QuantumGLUT.cp 

# Convert .cp files to .o files, maintaining directory structure
OBJS = $(SRCS:.cp=.o)


# Compilation rule for .cp files
%.o: %.cp
	@echo "Compiling: $<"
	$(CXX) $(COPTS) $(EMSCRIPTEN_OPTS) -c $< -o $@ $

# Main target
qugel.html: $(OBJS)
	$(CXX) $(COPTS) $(EMSCRIPTEN_OPTS) \
	-o $@ $(OBJS) \
	-s EXPORTED_FUNCTIONS='["_main"]'

all: qugel.html

clean:
	rm -f $(OBJS)
	rm -f qugel.html
	rm -f qugel.js
	rm -f qugel.wasm
