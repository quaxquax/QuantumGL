all:	qugel


parser:	quantum.tab.cp lex.yy.cp quantum.tab.h
		
quantum.tab.h quantum.tab.cp: quantum.y
		bison -d quantum.y
		mv quantum.tab.c quantum.tab.cp

lex.yy.cp: quantum.l
		flex quantum.l
		mv lex.yy.c lex.yy.cp
		
		
qugel:	$(OBJS)
		g++ -g -o qugel $(OBJS) $(LIBS)

#clean:
#		rm -f *.o
#		rm -f FieldFunctions/*.o
#		rm -f *.d
#		rm -f FieldFunctions/*.d
#		rm -f qugel

clean:
		rm -f $(OBJS)
		rm -f $(DEPS)
		rm -f depend
		rm -f qugel

%.o:	%.cp
		g++ -c $(COPTS) -o $@ $<
		
depend: $(DEPS)
		cat $(DEPS) | sed s/\\.cp\\.o/.o/g > depend

%.d:	%.cp
		echo -n $< > $@
		g++ -MM $(COPTS) $< | sed s/.*\\.o/.o/ >> $@ 


include depend
