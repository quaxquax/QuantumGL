OBJS=$(SRCS:%.cp=%.o)
DEPS=$(SRCS:%.cp=%.d)

COPTS= -I. -g -frtti -O3
LIBS= -L/usr/X11R6/lib/ -lglut -lGLU -lGL -lX11 -lXi -lXext -lXmu -lm

